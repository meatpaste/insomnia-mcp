{
  "name": "insomnia-mcp",
  "version": "0.2.2",
  "description": "Model Context Protocol server for Kong Insomnia collections",
  "type": "module",
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "bin": {
    "insomnia-mcp": "./bin/insomnia-mcp.js"
  },
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts --out-dir dist && chmod +x bin/insomnia-mcp.js",
    "start": "node ./dist/index.js",
    "dev": "tsx watch src/index.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src tests --ext .ts",
    "lint:fix": "eslint src tests --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run typecheck && npm test && npm run build",
    "release": "standard-version",
    "release:minor": "standard-version --release-as minor",
    "release:major": "standard-version --release-as major",
    "release:patch": "standard-version --release-as patch",
    "prepare": "husky"
  },
  "keywords": [
    "insomnia",
    "mcp",
    "kong"
  ],
  "author": "meatpaste",
  "license": "MIT",
  "files": [
    "bin",
    "dist",
    "src",
    "tests",
    "README.md",
    "tsconfig.json",
    "vitest.config.ts"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.18.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/node": "^22.5.1",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitest/coverage-v8": "^2.1.9",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.3",
    "prettier": "^3.6.2",
    "standard-version": "^9.5.0",
    "tsup": "^8.2.4",
    "tsx": "^4.16.5",
    "typescript": "^5.5.4",
    "vitest": "^2.0.5"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
